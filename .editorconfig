root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true


[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
